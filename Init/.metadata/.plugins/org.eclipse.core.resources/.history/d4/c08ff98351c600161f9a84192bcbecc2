
public abstract class Point {
	private double x;
	private double y;
	
	/**
	 * @return x coordinate
	 */
	public double getX() {
		return x;
	}
	
	/**
	 * @param x value to set x coordinate
	 */
	public void setX(double x) {
		this.x = x;
	}
	/**
	 * @return y coordinate
	 */
	public double getY() {
		return y;
	}
	/**
	 * @param y value to set y coordinate
	 */
	public void setY(double y) {
		this.y = y;
	}
	
	public void setCoordinates(double x, double y) {
		setX(x);
		setY(y);
	}
	
	
	
}
