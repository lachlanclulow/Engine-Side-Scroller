import org.newdawn.slick.Image;
import org.newdawn.slick.SlickException;

public class Player {

	private static int STARTX = 10;
	private static int STARTY = 10;
	private static String SPRITE_REF = "assets/playerSprite.png";
	
	/*	Player's x coordinate	*/
	private int x;
	/*	Player's y coordinate	*/
	private int y;
	
	private Image sprite;
	
	/*
	 *	Default constructor
	 */
	Player () throws SlickException {
		x = STARTX;
		y = STARTY;
		sprite = new Image(SPRITE_REF);
	}
	
	/*
	 *	@param x starting x coordinate
	 *	@param y starting y coordinate
	 */
	Player (int x, int y) {
		this.x = x;
		this.y = y;
	}
	
	Player (int x, int y, String spriteRef)
	{
		
	}
	
}
